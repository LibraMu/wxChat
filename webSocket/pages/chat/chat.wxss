/* pages/chat/chat.wxss */
.content_box{
	overflow: hidden;
	font-size: 28rpx;
	padding: 20rpx;
	padding-bottom: 120rpx;
	height: 100%;
	box-sizing: border-box;
}
.mysely_content{
	float: right;
	width: 90%;
}
.content_item{
	overflow: hidden;
	margin-bottom: 20rpx;
}
.my_layout{
	display: flex;
	justify-content:flex-end;
}
.layout{
	display: flex;
}
.msg{
	padding:0 16rpx;
	box-sizing: border-box;
	min-height: 60rpx;
	background: #43c01c;
	color: #fff;
	display: flex;
	align-items: center;
	border-radius: 10rpx;
}
.my_layout .msg{
	margin-right: 10rpx;
	/*border-radius: 10rpx 0 10rpx 10rpx;*/
}
.client_layout .msg{
	margin-left: 10rpx;
	/*border-radius:0 10rpx 10rpx 10rpx;*/
}
.msg text{
	vertical-align: middle;
	line-height: 60rpx;
}
.header_img{
	width: 90rpx;
	min-width: 90rpx;
	height: 90rpx;
	min-height: 90rpx;
}
.header_img image{
	width: 100%;
	height: 100%;
}
.client_content{
	float: left;
	width: 90%;
}
.floor_menu{
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	padding: 10rpx 20rpx;
	box-sizing: border-box;
	background: #eee;
	display: flex;
	justify-content: space-between;
	border: 2rpx solid #eee;

}
.input_box{
	width: 100%;
}
.content_input{
	border: 2rpx solid #fff;
	border-radius: 10rpx;
	padding-left: 10rpx;
	display: block;
	width: 100%;
	height: 60rpx;
	line-height: 60rpx;
	background: #Fff;
	font-size: 28rpx;
}
.send_btn{
	float: right;
	margin: 0 0 0 20rpx;
	min-width:120rpx;
	line-height: 60rpx;
	font-size: 28rpx;
	color: #fff;
	background: #61daa5;
}
